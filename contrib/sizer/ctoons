#-*-Perl-*-

# katz and outtakes are MIA 4/26/00
foreach (qw(pcpixel chickw broom lola quig rubes)) {
    $hof{$_} = 7;
}

#ctoons.com http://www.ctoons.com
sub ctoons {
    my ($time,$title,$author,$dir,$file,$wd_type,$sun_type,$wd_size,$sun_size)
	= @_;
    my @ltime = gmtime($time);
    my ($size,$type);
    if ($ltime[6] == 0) {
	$size = $sun_size;
	$type = $sun_type;
	$fileprefix = strftime("%Y%m%d-01", @ltime);
    } else {
	$size = $wd_size;
	$type = $wd_type;
	$fileprefix = strftime("%y%m%d",@ltime);
    }

    return undef unless defined($size) && defined($type);

    my $rec = {
	'title' => $title,
	'author' => $author,
	'type' => $type,
	'main' => "http://www.ctoons.com/javascript/$dir/ns/",
	'archives' => "http://www.ctoons.com/javascript/$dir/ns/",
	'base' => "http://www.ctoons.com/studio/$dir/images/",
	'page' => strftime("$fileprefix.$type",@ltime),
	'size' => $size
	};
    return $rec;
}

#Dr Katz
# ex : Sunday: http://www.ctoons.com/studio/drkatz/images/19990919-01.gif
# mon-sat: http://www.ctoons.com/studio/drkatz/images/990918.gif
sub katz {
    my $time = shift;
    return ctoons($time,"Dr Katz","Comedy Central","drkatz",
		       "drkatz",'gif','gif',[504,157],[922,645]);
}

#Outtake 
# mon-sat: http://www.ctoons.com/studio/outtake/images/990918.gif
sub outtake {
    my $time = shift;
    return ctoons($time,"Outtake","Ed Colley and Mark Pothier","outtake",
                       "outtake",'gif',undef,[504,157],[922,645]);
}

