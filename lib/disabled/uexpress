#Tradin' Paint http://www.uexpress.com/ups/comics/tp/
sub paint {
    my $time = shift;
    my @ltime = gmtime($time);
    return undef unless $ltime[6] == 6; #only Saturday comics
    return uexpress($time,"Trading Paint","Geof Brooks","tp",
		    undef,[600,218]);
}

