#-*-Perl-*-

#Tack on the names of the subroutines to the list of functions
foreach (qw(adam bliss bz bd cathy cd cth corn cr cs dp hc fw fusco geech itb 
	    boffo ob rla sc stsp tank paint ziggy)) {
    $hof{$_} = 14;
}

#UExpress http://www.uexpress.com/ups/comics/
sub uexpress {
    #get arguments (fp stands for file prefix)
    my ($time,$title,$author,$fp,$sun_size,$wd_size) = @_;
    my @ltime = gmtime($time);
    my $size = ($ltime[6] == 0 ? $sun_size : $wd_size);
    return undef unless defined $size;
    my $rec = {
	'title' => $title,
	'author' => $author,
	'type' => 'gif',
	'main' => "http://www.uexpress.com/ups/comics/$fp",
	'archives' => "http://www.uexpress.com/ups/comics/$fp",
	'base' => "http://www.uexpress.com",
	'page' => strftime("/ups/comics/$fp/pages/$fp%y%m%d.html",@ltime),
	'exprs' => ["(\/ups\/comics\/$fp\/strips\/$fp\\d+\.gif)"],
	'size' => $size
    };
    return $rec;
}

#Adam@home http://www.uexpress.com/ups/comics/ad/
sub adam {
    return uexpress(shift(@_),"Adam at Home","Brian Basset","ad",
		    [600,428],[600,200]);
}

