}

#Pluggers ex: http://www.comicspage.com/daily/cpplg/20000916cpplg-a.gif
#mon-sat
sub plug {
    my $time = shift;
    return ComicsPage($time,"Pluggers","",
	"pluggers", "plg","cp",'gif','gif',[300,322],[580,180]);
}

1;
