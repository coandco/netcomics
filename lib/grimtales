#-*-Perl-*-

#Tack on the names of the subroutines to the list of functions
$hof{"grimtales"} = 1;

sub grimtales {
    my $time = shift;
    my @ltime = gmtime($time);
    my @monthconv = ("January", "February", "March", "April", "May", "June",
                     "July", "August", "September", "October", "November", "December");
    my $monthname = $monthconv[$ltime[4]];
    my $year = $ltime[5] + 1900;
    my $datestr = "$monthname $ltime[3], $year";

    my $base = "http://snafu-comics.com";
    
    my $rec = {
	'title' => "Grim Tales From Down Below",
	'author' => "Bleedman",
	'type' => 'jpg',
	'main' => "$base/swmseries/grimtales/",
	'archives' => "$base/swmseries/grimtales/",
	'base' => "",
	'page' => "$base/swmseries/grimtales/",
	'exprs' => ['href="([^"]*)"><section class="row">[^<]*<div[^>]*><img[^>]*><.div>[^<]*<div[^>]*>[^<]*<p class="pubdate">' . $datestr,
                    'og.image" content="([^"]*)"']
	};
    return $rec;
}

1;


