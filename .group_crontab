#Update the crontab
13 05 * * * cd $HOME/src/netcomics/netcomics; cvs -q update .group_crontab; crontab .group_crontab
#Update the website
32 05 * * * cd $HOME/src/netcomics; cvs -q update -d; cd website; make -s all install
# Generate daily CVS snapshots and copy them into the webspace
40 05 * * * snapsdir=/home/groups/n/ne/netcomics/htdocs/snaps; cd $HOME/src; rm -f netcomics-*cvs.*z*; cd netcomics/netomics; make -s archives; cd ../..; rm -f $snapsdir/*; cp netcomics-*cvs.*z* $snapsdir; date > $snapsdir/lastmod